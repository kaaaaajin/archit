<%= render "public/posts/errors", obj: @user %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="text-center">User info</h2>
    <%= form_with model: @user, url: admin_user_path(@user), method: :put do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-check text-center"> 
      <%= f.radio_button :is_deleted, false, checked: true %>有効 
      <%= f.radio_button :is_deleted, true %>利用停止
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-secondary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

