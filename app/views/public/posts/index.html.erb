<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-6 mx-auto my-3">
      <!--検索用-->
     <%= search_form_for @search, url: posts_path do |f| %>
       <div class="input-group">
         <%= f.search_field :architecture_or_architect_or_address_or_body_or_post_comments_comment_cont, class: "form-control",placeholder: "キーワード検索" %>
           <span class="input-group-btn"><%= f.submit "検索", class: "btn btn-primary" %></span>
       </div>
     <% end %>
    </div>
  </div>

   <%= render "public/posts/sort",post: @post %>
  
    <h2 class="text-center mb-3">Posts <span><i class="fas fa-camera"></i></span></h2>
  <div class="row" id="posts_wrapper">
    <!--投稿写真一覧-->
    <%= render "public/posts/index",posts: @posts %>
  </div>
</div>
<!--ページネーション-->
<div class="container mt-4">
  <div class="row justify-content-center"><%= paginate @posts %></div>
</div>
