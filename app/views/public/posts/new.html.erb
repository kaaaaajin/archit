<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>投稿画面</h2>
   <%= form_with model:@post, url: posts_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label "picture" %>
        <%= f.file_field :post_image, class: 'form-control-file', ccept: "image/*" %>
      </div>  
      <div class="form-group">
        <%= f.label "architecture" %>
        <%= f.text_field :architecture, class: 'form-control', autofocus: true, placeholder: "建築名" %>
      </div>
      <div class="form-group">
        <%= f.label "architect" %> 
        <%= f.text_field :architect, class: 'form-control', autofocus: true, placeholder: "建築家" %>
      </div>
      <div class="form-group">
        <%= f.label "address" %> 
        <%= f.text_field :address, class: 'form-control', autofocus: true, placeholder: "所在地" %>
      </div>
      <div class="form-group">
        <%= f.label "country" %> 
        <%= f.country_select :country_code, selected: "JP", class: 'form-control' %> 
      </div>
      <div class="form-group">
        <%= f.label "caption" %> 
        <%= f.text_area :body, class: 'form-control', autofocus: true, placeholder: "キャプションを書く" %>
      </div>  
      <div class="form-group">
        <%= f.submit "投稿する", class: 'btn btn-secondary' %>
      </div>  
    <% end %>
    </div>
</div>


