<%= form_with model: [post, post_comment], local: false do |f|%>
   <div class="form-group">
     <%= f.text_area :comment, class: "form-control", autofocus: true, placeholder: "コメントをここに" %>
   </div>
   <div class="form-group">
     <%= f.submit "送信する",  class: "btn btn-secondary btn-sm" %>
   </div>
<% end %>