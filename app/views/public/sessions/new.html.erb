<div class='container'>
  <div class='row text-center'>
    <div class="col-sm-12 col-md-7 col-lg-5 py-5 mx-auto m-5 bg-white">
        <h3 class="mb-4">ログイン</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-envelope"></i></span>
    </div>
      <%= f.email_field :email, autofocus: true, class: "form-control w-50", placeholder: "メールアドレス" %>
  </div>

  <div class="input-group mb-3">
          <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
           </div>
               <%= f.password_field :password, autocomplete: "off", class: "form-control w-50", placeholder: "パスワード" %>
           </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-left">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

 <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-secondary w-50 my-4" %>
  </div>
<% end %>

<%= render "public/shared/links" %>


