<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-info btn-sm" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-success btn-sm" %>
  <% end %>
<% end %>
