<% if post.like_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true do %>
    <i class="fas fa-heart fa-lg" style="color: red;"></i>
      <span class="text-danger"><%= post.likes.count %></span>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="far fa-heart fa-lg"></i>
      <%= post.likes.count %> 
  <% end %>
<% end %>