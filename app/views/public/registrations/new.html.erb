<div class='container'>
  <div class='row text-center'>
    <div class="col-sm-12 col-md-7 col-lg-5 py-5 mx-auto m-5 bg-white">
        <h3>新規登録</h3>
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 　　　　　　 <%= render "public/shared/error_messages", resource: resource  %>
         <div class="input-group mb-3">
           <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
           </div>
            <%= f.text_field :name, autofocus: true, class: "form-control w-50", placeholder: "ユーザー名" %></br>
          </div>  
          
          <div class="input-group mb-3">
          <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
           </div>
             <%= f.email_field :email, autofocus: true, class: "form-control w-50", placeholder: "メールアドレス" %>
           </div>
           
           
           <div class="input-group mb-3">
          <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
           </div>
               <%= f.password_field :password, autocomplete: "off", class: "form-control w-50", placeholder: "パスワード" %>
           </div>
            <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %> 文字以上のパスワードを設定してください)</em>
             <% end %><br />


  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-secondary w-50 my-4" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
