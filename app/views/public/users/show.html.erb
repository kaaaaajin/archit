<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <!--プロフィール写真-->
          <p class="profile_image text-center">
              <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
        　</p>
        　<!--フォローボタン-->
            <div class="text-right">
              <p id="relationship_btn_<%= @user.id %>">
                <%= render "public/relationships/btn", user: @user %>
              </p>
            </div>
            <h6 class="card-title"><%= @user.name %></h6>
            <p class="card-text"><%= simple_format(@user.introduction) %></p>
          　<!--投稿ボタン-->
            <p class="button text-center mt-2">
              <%= link_to new_post_path, class: "btn btn-secondary w-50" do %>
                <i class="fas fa-pen"></i> 投稿する
              <% end %>
            </p>
           <!--投稿数、フォローフォロワー人数-->
    　　   　<table class="table table-borderless text-nowrap">
  　　　　    　　<tr>
                <td>投稿数</td>
                <td>フォロー</td>
                <td>フォロワー</td>
              </tr>
              <tr class="count text-center">
                <td><%= @user.posts.count %></td>
                <td><%= link_to @user.followings.count, user_followings_path(@user) %></td>
                <td><%= link_to @user.followers.count, user_followers_path(@user) %></td>
              </tr>
            </table>
            <!--お気に入り保存一覧、プロフィール編集-->
            <% if @user == current_user %>
            <p class="link text-right">
              <%= link_to favorites_users_path, class: "text-dark text-right" do %>
                <i class="fas fa-bookmark fa-lg"></i>お気に入り保存
              <% end %>
            </p>
            <% end %>
            <% if @user == current_user && @user.name != "guestuser" %>
              
               <p class="link text-right">
                 <%= link_to edit_user_path(@user), class: "text-dark text-right" do %>
                   <i class="fas fa-user-cog fa-lg"></i>プロフィール編集
                 <% end %>
               </p>
            <% end %>
        </div>
      </div>
    </div>
    <!--ユーザーが投稿した写真一覧-->
    <div class="col-sm-12 col-md-5 col-lg-7 offset-lg-1">
      <div class="photo">
        <% @posts.each do |post| %>
            <%= link_to post_path(post) do %>
              <%= image_tag post.get_post_image(200, 200), class: "img-fluid m-1" %>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container float-right"><%= paginate @posts %></div> 