<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto my-3">
      <!--ユーザー検索用-->
　　　<%= render "public/users/search_user", q: @q %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto py-3">
      <!--登録しているユーザー一覧-->
      <h2 class="text-center mb-3">Users</h2>
      <table class="table table-hover text-center">
        <thead>
          <tr>
            <th colspan="2">ユーザー名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <% if user.name != "guestuser" %>
              <tr>
                <td><%= image_tag user.get_profile_image(50,50), class: "rounded-circle" %></td>
                <td><%= link_to user_path(user) do %><%= user.name %><% end %></td>
                <!--フォロー・フォロワー-->
                <td id="relationship_btn_<%= user.id %>">
                  <%= render "public/relationships/btn", user: user %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center"><%= paginate @users %></div> 
</div>