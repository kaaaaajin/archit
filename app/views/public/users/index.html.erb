<div class="container">
  <div class="row">
    <!--ユーザー検索用-->
    <div class="col-md-4 mx-auto my-3">
      <%= search_form_for @q, url: users_path do |f| %>
        <div class="input-group">
          <%= f.search_field :name_cont, class: "form-control" ,placeholder: "ユーザー名" %>
           <span class="input-group-btn">
             <%= f.submit "検索", class: "btn btn-primary" %>
           </span>
        </div> 
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto py-3">
      <!--登録しているユーザー一覧-->
      <h2 class="text-center mb-3">Users</h2>
      <table class="table table-hover text-center">
        <thead>
          <tr>
            <th colspan="2">ユーザー名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <% if user.name != "guestuser" %>
              <tr>
                <td><%= image_tag user.get_profile_image(50,50), class: "rounded-circle" %></td>
                <td><%= link_to user_path(user) do %>
                      <%= user.name %>
                    <% end %>
                </td>
                <!--フォローフォロワー-->
                <td id="relationship_btn_<%= user.id %>">
                  <%= render "public/relationships/btn", user: user %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center"><%= paginate @users %></div> 
</div>