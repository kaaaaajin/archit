<div class="container">
<%= search_form_for @q, url: users_path do |f| %>
<%= f.search_field :name_cont, class: 'form-control',placeholder: "ユーザー名" %>
<%= f.submit "検索" %>
<% end %>



<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
    <% @users.each do |user| %>
    <% if user.name != "guestuser" && user.is_deleted != 'true' %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td id="relationship_btn_<%= user.id %>"><%= render 'public/relationships/btn', user: user  %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
